{
    "name": "omisai/szamlazzhu-agent",
    "description": "Sz치ml치zz.hu Sz치mla Agent API integration for Laravel",
    "keywords": [
        "omisai",
        "szamlazzhu",
        "szamla-agent",
        "api-agent",
        "laravel"
    ],
    "license": "MIT",
    "homepage": "https://github.com/omisai-tech/szamlazzhu-agent",
    "authors": [
        {
            "name": "S치ndor Gergely Bornemisza",
            "email": "bornemisza@omisai.com",
            "homepage": "https://omisai.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "illuminate/config": "^9.0 || ^10.0",
        "illuminate/support": "^9.0|^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.8",
        "nunomaduro/phpinsights": "^2.8",
        "pestphp/pest": "^2.5.0",
        "phpstan/phpstan": "^1.10.13",
        "symfony/var-dumper": "^6.2.8"
    },
    "autoload": {
        "psr-4": {
            "Omisai\\SzamlazzhuAgent\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omisai\\SzamlazzhuAgent\\Tests\\": "tests"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Omisai\\SzamlazzhuAgent\\SzamlaAgentServiceProvider"
            ]
        }
    },
    "scripts": {
        "lint": "pint",
        "test:lint": "pint --test",
        "test:analyse": "vendor/bin/phpstan analyse src tests",
        "test:unit": "vendor/bin/pest --colors=always",
        "test:coverage": "vendor/bin/pest --coverage",
        "test:insights": "./vendor/bin/phpinsights",
        "test": [
            "@test:lint",
            "@test:analyse",
            "@test:unit"
        ]
    }
}